@{
    ViewData["Title"] = "Tutor Form";
}


<div class="container mt-5 p-4 border rounded shadow">
    <h2 class="mb-3 text-dark">Tutoring Rate Calculator</h2>
    
    <div class="mb-3">
        <p>
            I understand you may be interested in learning about and getting into movies/TV.
            I am perfectly willing to tutor you in the art. <br><br>
            Fill out the form below if you are interested.
        </p>
    </div>

    <div class="mb-3">
        <label for="hours" class="form-label">Enter Hours Needed:</label>
        <input type="number" id="hours" class="form-control" min="1" required>
    </div>

    <div class="mb-3">
        <label for="rate" class="form-label">Hourly Rate:</label>
        <input type="text" id="rate" class="form-control" value="$25.50" readonly>
    </div>

    <button id="calculate" class="btn btn-primary w-100">Calculate Total</button>

    <div class="mt-3">
        <label for="total" class="form-label">Total Cost:</label>
        <input type="text" id="total" class="form-control" readonly>
    </div>
</div>
